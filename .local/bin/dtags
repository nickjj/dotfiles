#!/usr/bin/env bash
# List sorted tags for a specific Docker images.
#
# Examples:
#   dtags python

set -o errexit
set -o pipefail
set -o nounset

image="${1:-}"

curl --silent \
  "https://registry.hub.docker.com/v2/repositories/library/${image}/tags?page_size=1000" |
  jq -r ".results[].name" | sort --version-sort
